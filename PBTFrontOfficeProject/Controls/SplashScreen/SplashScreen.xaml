<Window x:Class="PBTFrontOfficeProject.Controls.SplashScreen.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PBTFrontOfficeProject.Controls.SplashScreen"    
    Title="SplashScreen" Height="236" Width="414" WindowStartupLocation="CenterScreen" WindowStyle="None" 
        Background="Orange" BorderBrush="DarkOrange" BorderThickness="3" ShowInTaskbar="False" ResizeMode="NoResize" AllowsTransparency="True" Opacity=".9">
    <Grid>
        <Label Margin="19,22,17,80" Name="label1" FontSize="60" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="DarkRed" FontWeight="Bold" FontFamily="Comic Sans MS">
            <Label.BitmapEffect>
                <OuterGlowBitmapEffect GlowSize="15" />
            </Label.BitmapEffect> YAZDIRILIYOR...
        </Label>
        <Label Height="28" Margin="19,0,17,15" Name="label2" VerticalAlignment="Bottom"
               Content="{Binding Source={x:Static local:MessageListener.Instance},Path=Message}" Foreground="White"></Label>
    </Grid>
</Window>
